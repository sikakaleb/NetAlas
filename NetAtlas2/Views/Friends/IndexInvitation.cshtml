
@{
    ViewBag.Title = "IndexInvitation";
    Layout = "~/Views/Shared/_FriendsLayout.cshtml";
}

<h2 class="text-primary text-center">IndexInvitation</h2>

@if (ViewBag.Search == "No Friend you are just lonely")
{
    <h4 class="text-danger text-center">@ViewBag.Search</h4>
}
else if (ViewBag.Search == "Ah you have friend baka")
{
    foreach (var user in Model)
    {
        <div class="well">
            <hr />
            <hr />
            <dl class="row">

                <dt class="col-sm-2">
                    Friend :
                </dt>
                <dd class="col-sm-10">
                    @user.UserName
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @user.Email
                </dd>
                <dt class="col-sm-2">
                    Account created
                </dt>
                <dd class="col-sm-10">
                    @user.CreatedOn
                </dd>
                <dt class="col-sm-2" style="margin-top:10px;">
                    Profil
                </dt>
                <dd class="col-sm-10">
                    @if (user.ImageUrl.Length > 0)
                    {
                        <img src="@Url.Content(user.ImageUrl)" alt="no image" style="height:64px" class="image-responsive img-circle" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/Profile Images/profil_vide.png")" alt="no image" style="height:64px" class="image-responsive img-circle" />

                    }
                </dd>
                @using (Html.BeginForm("AgreeInvitation", "Friends", FormMethod.Post))
                {
                    <input type='hidden' value="@user.Id" name='id' />
                    <input type="submit" value="Agree Invitation" class="btn btn-success pull-right" style="margin-bottom:10px; margin-left:0%">
                }


            </dl>
        </div>

    }
}
